apiVersion: v1
kind: PersistentVolume
metadata:
  name: minio-longhorn
spec:
  capacity:
    storage: 8Gi
  volumeMode: Filesystem
  accessModes:
    - ReadWriteOnce
  persistentVolumeReclaimPolicy: Retain
  storageClassName: longhorn-static
  csi:
    driver: driver.longhorn.io
    fsType: ext4
    volumeAttributes:
      numberOfReplicas: '1'
      staleReplicaTimeout: '20'
    volumeHandle: minio-longhorn
---
apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: minio-longhorn
  namespace: infra
spec:
  volumeMode: Filesystem
  accessModes:
    - ReadWriteOnce
  resources:
    requests:
      storage: 8Gi
  volumeName: minio-longhorn
  storageClassName: longhorn-static
